    "position": "top",
    "mode": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 0,
    "modules-left": [
        "custom/power",
        "clock",
        "hyprland/workspaces"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "tray",
        "memory",
        "cpu",
        "temperature",
        "disk",
        "keyboard-state",
        "hyprland/language",
        "network",
        "battery",
        // "bluetooth",
        "backlight",
        "systemd-failed-units",
